<h1><%= @list.name %></h1>

<h2>Films dans cette liste :</h2>
<ul>
  <% @list.movies.each do |movie| %>
    <li>
      <%= movie.title %>
      <%= link_to 'Supprimer', bookmark_path(movie.bookmarks.find_by(list: @list)), method: :delete, data: { confirm: "Êtes-vous sûr de vouloir supprimer ce film de la liste ?" } %>
    </li>
  <% end %>
</ul>

<%= link_to 'Ajouter un film à cette liste', new_list_bookmark_path(@list) %>
